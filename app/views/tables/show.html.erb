<p id="notice"><%= notice %></p>

<div class="center jumbotron">  
	<%= image_tag(table_url(@table), :height => "75%", :width => "75%", alt: table_url(@table)) %>
</div>
<p>
  <strong>Table Number:</strong>
  <%= @table.number %><br>
</p>
<p>
  <strong>Table Name:</strong>
  <%= table_name(@table) %><br>
</p>
<p>
  <strong>Capacity:</strong>
  <%= @table.capacity %><br>
</p>
<p>
  <strong>Guests:</strong>
  <%= @table.users.size %><br>
</p>
<p> <strong>Guests:</strong>
  <ul>
    <% @table.users.each do |guest| %>
      <li><%= link_to full_name(guest), guest %>: 
          <%= link_to "remove", untable_user_path(guest) %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_table_path(@table) %> |
<%= link_to 'Back', tables_path %>

