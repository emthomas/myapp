<p id="notice"><%= notice %></p>

<h1>Listing Tables</h1>
<h2><%= link_to get_theme(current_user.theme), flip_theme_path %></h2>

<table>
  <thead>
    <tr>
      <th>Table #</th>
      <th>Table Name</th>
      <th>Capacity</th>
      <th>Available</th>
      <th colspan="3"></th>
      <th>Guests</th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= link_to table.number, table %></td>
        <td><%= table_name(table) %></td>
        <td><%= table.capacity %></td>
        <td><%= table.available_seats %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'Empty', empty_table_path(table) %></td>
        <td><% table.users.order(:last_name).each do |guest| %>
        <%= "#{guest.first_name} #{guest.last_name}" %>,
        <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

