<% provide(:title, "Contact Us") %>
<h1>Contact Us</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:message, url: messages_path) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
      
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>

      <%= f.label :Message %>
      <%= f.text_area :body, size: "30x10", class: 'form-control' %>
      
      <%= f.submit "Send", data: { confirm: "We need your EMAIL or PHONE in order to reply. Did you include them in your message?" }, class: "btn btn-primary" %>
    <% end %>

  </div>
</div>