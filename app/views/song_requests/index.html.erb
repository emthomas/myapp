<p id="notice"><%= notice %></p>

<h1>Listing Song Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Requested By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_requests.each do |song_request| %>
      <tr>
        <td><%= song_request.name %></td>
        <td><%= song_request.author %></td>
        <td><%= full_name(song_request.user) %></td>
        <td><%= link_to 'Show', song_request %></td>
        <td><%= link_to 'Edit', edit_song_request_path(song_request) %></td>
        <td><%= link_to 'Destroy', song_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

