<% provide(:title, 'Families') %>
<div class="center jumbotron">
	<h1>All Families</h1>
</div>

<div>
<%= render 'filters' %>
</div>

<div>
<% unless @families.empty? %>
  <%= will_paginate %>
<% end %>

<table>
<tr>
    <th>Family Name</th>
    <th>Actions</th>
</tr>
<%= form_for(@family=Family.new) do |f| %>
      <%= render 'shared/error_messages_family' %>
<tr>  
  <td><%= f.text_field :family_name, size: 15 %></td>
  <td><%= f.submit "add family" %></td>
</tr>
<% end %>
</table>

<table>
<tr>
    <th>Name</th>
    <th>All/Coming/Not Seated</th>
  	<th>Actions</th>
</tr>
<%= render @families %>
</table>

<% unless @families.empty? %>
  <%= will_paginate %>
<% end %>

</div>


