<% provide(:title, 'Final Guest Count') %>
<div class="center jumbotron">
	<h1>Final Guests Count</h1>
	<h3><%= User.where(is_coming: true).count %></h3>
</div>

<table>
<tr><td>Table</td><td>Name</td><td>Tab#</td><td>Name</td><td>Tab#</td><td>Name</td></tr>
<tr>
<% @users.each do |guest| %>
	<td><%= guest.table_id %></td><td><%= full_name(guest) %></td>
    <% @count+=1 %>
    <% if @count%3==0 %></tr><tr>
	<% end %>
<% end %>
</tr>
</table>
