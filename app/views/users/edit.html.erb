<% provide(:title, "Edit user") %>
<h1>Update <%= @user.first_name %>'s profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
      
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
	
	  <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
      
      <%= f.label :family %>
      <%= f.collection_select(:family_id, Family.all.order(:family_name), :id, :family_name) %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
	  
	  <% if current_user.admin? %>
        <%= f.label :admin %>
        <%= f.check_box :admin, class: 'form-control' %>
        
        <%= f.label :invited %>
        <%= f.check_box :invited, class: 'form-control' %>
        
        <%= f.label :is_coming %>
        <%= f.check_box :is_coming, class: 'form-control' %>
     <% end %> 
     
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target=_blank>change</a>
    </div>
  </div>
</div>
